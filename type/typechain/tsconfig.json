{
    // include : ts 파일이 어디있는지, src 의 모든 파일을 확인하겠다
    "include": ["src"],
    // outDir : 자바스크립트 파일이 생성될 디렉토리 지정
    "compilerOptions": {
        "outDir": "build",
        "target": "ES6", // 어떤 버전으로 컴파일 할지
        "lib": ["ES6", "DOM"], // 자동 완성 기능
        "strict": true,  // 보호
        "allowJs": true
    }
}